<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>EnhancedTasks</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width,initial-scale=1">

	<%= stylesheet_link_tag "style.css" %>

	<%= javascript_include_tag "modernizr-2.0.min.js" %>
	<%= javascript_include_tag "respond.min.js" %>
	<%= yield :javascript %>
</head>
<body>
	<div id="header-container">
		<header class="wrapper">
			<h1 id="title">Your title</h1>
			<nav>
				<%= render "user_login_bar" %>
			</nav>
		</header>
	</div>
	<div id="main" class="wrapper">
		<aside>
			<%= render "side" %>
		</aside>
		<article>
      <%= yield %>
      </article>
  	</div>
  	<div id="footer-container">
  		<footer class="wrapper">
  			<h3>A nice footer</h3>
  		</footer>
  	</div>
  <%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" %>
  <%= javascript_tag do %>
    window.jQuery || document.write('<script src="js/libs/jquery-1.6.2.min.js"><\/script>')
  <% end %>

  <%= javascript_tag do %>
  	var _gaq=[['_setAccount','UA-XXXXX-X'],['_trackPageview']]; // Change UA-XXXXX-X to be your site's ID
  	(function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];g.async=1;
  	g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
  	s.parentNode.insertBefore(g,s)}(document,'script'));
  <% end %>

  <!--[if lt IE 7 ]>
  	<%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js" %>
  	<%= javascript_tag do %>
  	    window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})
  	<% end %>
  <![endif]-->

</body>
</html>
