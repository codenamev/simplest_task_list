<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  
  <div class="actions">
    <% user_default_password = request.remote_ip %>
    <%= f.hidden_field :password, :value => "#{user_default_password}" %>
    <%= f.hidden_field :password_confirmation, :value => "#{user_default_password}" %>
    <%= submit_tag "Sign Up" %>
  </div>
<% end %>
